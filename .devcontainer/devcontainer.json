{
  "name": "EduPredict Environment",
  "build": {
    "context": "..",
    "dockerfile": ".devcontainer/Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/edupredenv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  },
  "postCreateCommand": "source ~/.bashrc && conda activate edupredenv && pip install -r requirements.txt",
  "postStartCommand": "jupyter lab --ip=0.0.0.0 --port=8888 --no-browser --allow-root",
  "forwardPorts": [8888]
}